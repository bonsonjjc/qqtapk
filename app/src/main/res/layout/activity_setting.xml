<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.bonson.qqtapk.view.ui.setting.SettingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.bonson.resource.view.MToolbar
            android:id="@+id/toolbar"
            style="@style/Toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/toolbar" />
        </com.bonson.resource.view.MToolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/item_selector"
            android:paddingEnd="8dp"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:text="当前账号" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:text="@{viewModel.mobile}"
                android:textColor="#818181"
                android:textSize="14sp" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/item_selector"
            android:drawableEnd="@drawable/ico_arrow_right"
            android:drawableRight="@drawable/ico_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.onItem(1)}"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="修改密码" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/item_selector"
            android:drawableEnd="@drawable/ico_arrow_right"
            android:drawableRight="@drawable/ico_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.onItem(2)}"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="通知设置" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/item_selector"
            android:drawableEnd="@drawable/ico_arrow_right"
            android:drawableRight="@drawable/ico_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.onItem(3)}"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="在线客服" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/item_selector"
            android:drawableEnd="@drawable/ico_arrow_right"
            android:drawableRight="@drawable/ico_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.onItem(4)}"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="关于我们" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/item_selector"
            android:drawableEnd="@drawable/ico_arrow_right"
            android:drawableRight="@drawable/ico_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.onItem(5)}"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="终端购买" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/item_selector"
            android:drawableEnd="@drawable/ico_arrow_right"
            android:drawableRight="@drawable/ico_arrow_right"
            android:gravity="center_vertical"
            android:onClick="@{()->viewModel.onItem(6)}"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:text="离线地图" />

    </LinearLayout>
</layout>